<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="个人中心"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 用户头像等个人中心头部 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/img_bg_user_head">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_main_user_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_person_picture"/>
                <!-- 用户名 积分 等级 -->
                <LinearLayout
                    android:id="@+id/ll_main_user_param"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/civ_main_user_avatar"
                    android:visibility="visible">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <!-- 用户名 -->
                        <TextView
                            android:id="@+id/tv_main_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/main_user_head_username"
                            android:textSize="13sp"
                            android:textColor="#ffffff"
                            android:paddingRight="5dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_head_score1"
                            android:textSize="13sp"
                            android:textColor="#ffffff"
                            />
                        <!-- 积分 -->
                        <TextView
                            android:id="@+id/tv_main_user_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_zero1"
                            android:textSize="13sp"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_head_score2"
                            android:textSize="13sp"
                            android:textColor="#ffffff"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- 等级 -->
                <TextView
                    android:text="Level 5"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/ll_main_user_param"
                    android:id="@+id/iv_main_user_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:gravity="center"/>

                <!-- 登录 -->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_main_user_login"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/civ_main_user_avatar"
                    android:layout_centerInParent="true">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/tv_main_user_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_user_head_login"
                        android:textSize="13sp"
                        android:textColor="#ffffff"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:background="#c0574B5B">
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_main_user_zhituiyeji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/main_user_zero1"
                        android:textSize="13sp"
                        android:textColor="#ffffff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/main_user_head_achievement_z"
                        android:textSize="13sp"
                        android:textColor="#ffffff"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="#ffffff"/>
                    <TextView
                        android:id="@+id/tv_main_user_fentuiyeji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/main_user_zero1"
                        android:textSize="13sp"
                        android:textColor="#ffffff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/main_user_head_achievement_f"
                        android:textSize="13sp"
                        android:textColor="#ffffff"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </RelativeLayout>

            <!-- 财务信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="#ECEDEF">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"/>
                <!-- 可提金额 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/main_user_coin"
                            android:textSize="13sp"
                            android:textColor="#DA3594"/>
                        <TextView
                            android:id="@+id/tv_main_user_cash_able"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_zero2"
                            android:textSize="13sp"
                            android:textColor="#DA3594"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/main_user_finance_cash_able"
                        android:textSize="13sp"
                        android:textColor="#DA3594"/>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <!-- 象币 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_coin"
                            android:textSize="13sp"
                            android:textColor="#DA3594"/>
                        <TextView
                            android:id="@+id/tv_main_user_ele_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_zero2"
                            android:textSize="13sp"
                            android:textColor="#DA3594"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/main_user_finance_ele_coin"
                        android:textSize="13sp"
                        android:textColor="#DA3594"/>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
                <!-- 待提金额 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_coin"
                            android:textSize="13sp"
                            android:textColor="#DA3594"/>
                        <TextView
                            android:id="@+id/tv_main_user_cash_ing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_zero2"
                            android:textSize="13sp"
                            android:textColor="#DA3594"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/main_user_finance_cash_ing"
                        android:textSize="13sp"
                        android:textColor="#DA3594"/>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"/>
            </LinearLayout>

            <!-- 功能列表 620dp-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:orientation="vertical"
                android:background="#fefefe">
                <!-- 极享服务 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="#DA3594"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/main_user_fun_own"
                        android:textColor="#0B0B0B"
                        android:textSize="13sp"/>
                </LinearLayout>
                <!-- 设置 我的订单 账户安全 地址管理 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/lv_main_user_shezhi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_main_user_shezhi"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_fun_shezhi"
                            android:textSize="11sp"
                            android:textColor="#0B0B0B"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_main_user_wodedingdan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_main_user_wodedingdan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_user_fun_wodedingdan"
