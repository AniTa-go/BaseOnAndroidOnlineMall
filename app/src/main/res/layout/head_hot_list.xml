<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slideLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/other_slider_height">

    </com.daimajia.slider.library.SliderLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_qiandao"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/qiandao"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_gravity="center"
                android:text="签到"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jixianggou"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/jixianggou"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_gravity="center"
                android:text="极享购"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chuangke"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/chuangke"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:textSize="13sp"
                android:layout_gravity="center"
                android:text="创客"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_baozhang"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/baozhang"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:textSize="13sp"
                android:layout_gravity="center"
                android:text="保障"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_zhibo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/zhibo"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:textSize="13sp"
                android:layout_gravity="center"
                android:text="直播"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/transparent"/>
</LinearLayout>
